<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- MySQL 数据库信息 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/esdb</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.autocommit">false</property>

		<property name="hibernate.connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>
		<property name="hibernate.c3p0.max_size">
			200
		</property>
		<property name="hibernate.c3p0.min_size">
			5
		</property>
		<property name="hibernate.c3p0.timeout">
			120
		</property>
		<property name="hibernate.c3p0.max_statements">
			100
		</property>
		<property name="hibernate.c3p0.idle_test_period">
			120
		</property>
		<property name="hibernate.c3p0.acquire_increment">
			2
		</property>

		<!-- 方言 -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<!-- <property name="dialect">cn.lrxzl.dialect.mysql.MySqlDialect</property> 
			<property name="hibernate.query.substitutions">true=1,false=false</property> -->

		<!--显示sql语句 -->
		<property name="show_sql">true</property>

		<!--引入的映射对象的xml文件的全路径及文件名 -->
		<!-- <mapping resource="cn/unclezhang/bean/goods.hbm.xml"/> -->
	</session-factory>
</hibernate-configuration>